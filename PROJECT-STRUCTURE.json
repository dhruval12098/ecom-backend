{
  "folders": [
    {
      "name": "Backend Root",
      "files": [
        "package.json",
        "tsconfig.json",
        ".env.example",
        "README.md",
        "MIGRATION-GUIDE.md"
      ]
    },
    {
      "name": "Supabase Config",
      "files": [
        "supabase/config/supabaseClient.ts",
        "supabase/schemas/database.types.ts",
        "supabase/seed/seed-data.sql"
      ]
    },
    {
      "name": "API Routes",
      "files": [
        "api/routes/hero-slides/route.ts",
        "api/routes/hero-slides/[id]/route.ts"
      ]
    },
    {
      "name": "Services & Types",
      "files": [
        "services/heroService.ts",
        "types/index.ts",
        "utils/validation.ts"
