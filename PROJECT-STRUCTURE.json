  ],
  "setup_steps": [
    "1. Run 'npm install' in Backend directory",
    "2. Copy .env.example to .env.local",
    "3. Add your Supabase credentials",
    "4. Run seed-data.sql in Supabase SQL editor",
    "5. Start backend with 'npm run dev'",
    "6. Update frontend to use API endpoints"
  ],
  "api_endpoints": [
    "GET /api/hero-slides - Get all active slides",
    "POST /api/hero-slides - Create new slide",
    "GET /api/hero-slides/[id] - Get slide by ID",
    "PUT /api/hero-slides/[id] - Update slide",
    "DELETE /api/hero-slides/[id] - Delete slide"
  ]
}